
public class Renkler {
	private static String[] renkler=new String[] { "yavru ağzı", "cam göbeği", "van dyke kahverengisi",
			"hint sarısı", "alizarin kırmızısı", "kadmiyum sarısı",
			"gece yarısı siyahı", "prusya mavisi", "titanyum beyazı",
			"koyu siena" };

	public Renkler(String[] renkler) {
		this.setRenkler(renkler);
	}

	/**
	 * @return the renkler
	 */
	public static String[] getRenkler() {
		return renkler;
	}

	/**
	 * @param renkler the renkler to set
	 */
	public void setRenkler(String[] renkler) {
		Renkler.renkler = renkler;
	}

	public static String random_renk() {
		// TODO Auto-generated method stub
		return getRenkler()[(int) (Math.random() * renk_listesi.getRenkler().length)];;
	}
}